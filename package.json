{
  "name": "@dynui/fixed-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "node ./tools/run-turbo-task.js build",
    "dev": "node ./tools/run-turbo-task.js dev",
    "test": "node ./tools/run-turbo-task.js test",
    "test:a11y": "node ./tools/run-turbo-task.js test:a11y",
    "typecheck": "node ./tools/run-turbo-task.js typecheck",
    "lint": "node ./tools/run-turbo-task.js lint",
    "turbo": "turbo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "node ./tools/run-turbo-task.js clean",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "storybook:apps": "cd apps/storybook && pnpm storybook",
    "build:storybook": "storybook build",
    "build:storybook:apps": "cd apps/storybook && pnpm build:storybook",
    "playground": "pnpm --filter playground dev"
  },
  "dependencies": {
    "@dynui/design-tokens": "workspace:*"
  },
  "devDependencies": {
    "@axe-core/react": "catalog:",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-essentials": "catalog:",
    "@storybook/addon-interactions": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "chromatic": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-react": "catalog:",
    "@typescript-eslint/parser": "workspace:*",
    "@stylistic/eslint-plugin": "workspace:*",
    "husky": "workspace:*",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "storybook": "catalog:",
    "tsd": "catalog:",
    "tsup": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vitest-axe": "catalog:",
    "nx": "22.0.2"
  },
  "packageManager": "pnpm@9.12.0"
}